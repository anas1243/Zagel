        <activity android:name=".Activities.OrderPackageActivities.OrderPackageMapActivity" />

        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".FromLocationToSourceActivity" />
        <activity android:name=".FromSourceToDestinationActivity" />
        <activity android:name=".Activities.OrderPackageActivities.PackageOnTheWayActivity" />
